@article{Roth2008,
  title = {The value of ventriculo-peritoneal shunting in patients with glioblastoma multiforme and ventriculomegaly},
  author = {Roth, J. and Constantini, S. and Blumenthal, D. T. and Ram, Z.},
  date = {2008-01-10},
  journaltitle = {Acta Neurochirurgica},
