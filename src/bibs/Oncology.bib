  date = {2008-03-10},
  journaltitle = {Journal of Clinical Oncology},
  volume = {26},
  number = {8},
  eprint = {18323558},
  eprinttype = {pmid},
  pages = {1338--1345},
  publisher = {{American Society of Clinical Oncology}},
