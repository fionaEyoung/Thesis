@article{Fortin2012,
  title = {Tractography in the {{Study}} of the {{Human Brain}}: {{A Neurosurgical Perspective}}},
  shorttitle = {Tractography in the {{Study}} of the {{Human Brain}}},
  author = {Fortin, David and Aubin-Lemay, Camille and Boré, Arnaud and Girard, Gabriel and Houde, Jean-Christophe and Whittingstall, Kevin and Descoteaux, Maxime},
  date = {2012-11},
