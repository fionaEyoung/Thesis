  title = {{{MR Imaging}} of the {{Temporal Stem}}: {{Anatomic Dissection Tractography}} of the {{Uncinate Fasciculus}}, {{Inferior Occipitofrontal Fasciculus}}, and {{Meyer}}’s {{Loop}} of the {{Optic Radiation}}},
  shorttitle = {{{MR Imaging}} of the {{Temporal Stem}}},
  author = {Kier, E. Leon and Staib, Lawrence H. and Davis, Lawrence M. and Bronen, Richard A.},
