@article{Roux2021,
  title = {Combining {{Electrostimulation With Fiber Tracking}} to {{Stratify}} the {{Inferior Fronto-Occipital Fasciculus}}},
  author = {Roux, Alexandre and Lemaitre, Anne-Laure and Deverdun, Jeremy and Ng, Sam and Duffau, Hugues and Herbet, Guillaume},
