}

@article{Bao2017,
  title = {The {{Superior Fronto-Occipital Fasciculus}} in the {{Human Brain Revealed}} by {{Diffusion Spectrum Imaging Tractography}}: {{An Anatomical Reality}} or a {{Methodological Artifact}}?},
