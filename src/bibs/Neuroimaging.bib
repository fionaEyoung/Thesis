@article{Lim2015,
  title = {Probabilistic {{MRI}} tractography of the optic radiation using constrained spherical deconvolution: {{A}} feasibility study},
  author = {Lim, Jeremy C. and Phal, Pramit M. and Desmond, Patricia M. and Nichols, Andrew D. and Kokkinos, Chris and Danesh-Meyer, Helen V. and Kaye, Andrew H. and Moffat, Bradford A.},
  date = {2015},
  journaltitle = {PLoS ONE},
