@article{Hofer2010,
  title = {Reconstruction and dissection of the entire human visual pathway using diffusion tensor {{MRI}}},
  author = {Hofer, Sabine and Karaus, Alexander and Frahm, Jens},
  date = {2010-04-13},
  journaltitle = {Frontiers in Neuroanatomy},
