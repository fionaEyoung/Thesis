@article{Sarubbo2013,
  title = {Frontal terminations for the inferior fronto-occipital fascicle: anatomical dissection, {{DTI}} study and functional considerations on a multi-component bundle},
  shorttitle = {Frontal terminations for the inferior fronto-occipital fascicle},
  author = {Sarubbo, Silvio and De Benedictis, Alessandro and Maldonado, Igor L. and Basso, Gianpaolo and Duffau, Hugues},
  date = {2013-01-01},
  journaltitle = {Brain Structure and Function},
  shortjournal = {Brain Struct Funct},
