@article{Motomura2017,
  title = {Surgical benefits of combined awake craniotomy and intraoperative magnetic resonance imaging for gliomas associated with eloquent areas},
  author = {Motomura, Kazuya and Natsume, Atsushi and Iijima, Kentaro and Kuramitsu, Shunichiro and Fujii, Masazumi and Yamamoto, Takashi and Maesawa, Satoshi and Sugiura, Junko and Wakabayashi, Toshihiko},
