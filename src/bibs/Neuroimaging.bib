@article{Yang2017,
  title = {Beyond the {{Arcuate Fasciculus}}: {{Damage}} to {{Ventral}} and {{Dorsal Language Pathways}} in {{Aphasia}}},
  shorttitle = {Beyond the {{Arcuate Fasciculus}}},
  author = {Yang, Mi and Li, Yibo and Li, Jiao and Yao, Dezhong and Liao, Wei and Chen, Huafu},
