@article{Han2010,
  title = {Location of the corticospinal tract at the corona radiata in human brain},
  author = {Han, Bong Soo and Hong, Ji Heon and Hong, Cheolpyo and Yeo, Sang Seok and family=Lee, given=Dong, prefix=hoon, useprefix=false and Cho, Hee Kyung and Jang, Sung Ho},
  date = {2010-04-22},
  journaltitle = {Brain Research},
