@article{Hartkens2003,
  title = {Measurement and analysis of brain deformation during neurosurgery},
  author = {Hartkens, T. and Hill, D. L.G. and Castellano-Smith, A. D. and Hawkes, D. J. and Maurer, C. R. and Martin, A. J. and Hall, W. A. and Liu, H. and Truwit, C. L.},
