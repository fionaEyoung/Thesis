  author = {Palm, Walter M. and Saczynski, Jane S. and family=Grond, given=J., prefix=van der, useprefix=false and Sigurdsson, Sigurdur and Kjartansson, Olafur and Jonsson, Palmi V. and Eiriksdottir, Gudny and Gudnason, Vilmundur and Admiraal-Behloul, Faiza and Launer, Lenore J. and family=Buchem, given=Mark A., prefix=van, useprefix=false and Age, the and Study, Gene/Environment Susceptibility–Reykjavik},
