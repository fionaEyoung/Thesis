@article{Voets2021,
  title = {Diffusion tractography for awake craniotomy: accuracy and factors affecting specificity},
  author = {Voets, Natalie L. and Pretorius, Pieter and Birch, Martin D. and Apostolopoulos, Vasileios and Stacey, Richard and Plaha, Puneet},
  date = {2021-07-01},
  journaltitle = {Journal of Neuro-Oncology},
  volume = {153},
  number = {3},
  eprint = {34196915},
  eprinttype = {pmid},
