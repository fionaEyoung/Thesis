@article{Schilling2019a,
  title = {Synthesized b0 for diffusion distortion correction ({{Synb0-DisCo}})},
  author = {Schilling, Kurt G. and Blaber, Justin and Huo, Yuankai and Newton, Allen and Hansen, Colin and Nath, Vishwesh and Shafer, Andrea T. and Williams, Owen and Resnick, Susan M. and Rogers, Baxter and Anderson, Adam W. and Landman, Bennett A.},
