@inproceedings{Gupta2013,
  title = {Fiber feature map based landmark initialization for highly deformable {{DTI}} registration},
  booktitle = {Medical {{Imaging}} 2013: {{Image Processing}}},
  author = {Gupta, Aditya and Toews, Matthew and Janardhana, Ravikiran and Rathi, Yogesh and Gilmore, John and Escolar, Maria and Styner, Martin},
