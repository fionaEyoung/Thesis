}

@article{Li2023,
  title = {Diffusion {{MRI}} data analysis assisted by deep learning synthesized anatomical images ({{DeepAnat}})},
  author = {Li, Ziyu and Fan, Qiuyun and Bilgic, Berkin and Wang, Guangzhi and Wu, Wenchuan and Polimeni, Jonathan R. and Miller, Karla L. and Huang, Susie and Tian, Qiyuan},
