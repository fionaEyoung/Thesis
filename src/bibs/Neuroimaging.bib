@article{Li2017a,
  title = {Impact of intraoperative {{MRI-guided}} resection on resection and survival in patient with gliomas: a meta-analysis},
  author = {Li, Ping and Qian, Ruobing and Niu, Chaoshi and Fu, Xianming},
