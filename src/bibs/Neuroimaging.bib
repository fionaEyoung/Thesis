@article{Ball2013,
  title = {Development of cortical microstructure in the preterm human brain},
  author = {Ball, Gareth and Srinivasan, Latha and Aljabar, Paul and Counsell, Serena J and Durighel, Giuliana and Hajnal, Joseph V and Rutherford, Mary A and Edwards, A David},
