@article{Chen2015c,
  title = {Reconstruction of the arcuate fasciculus for surgical planning in the setting of peritumoral edema using two-tensor unscented {{Kalman}} filter tractography},
  author = {Chen, Zhenrui and Tie, Yanmei and Olubiyi, Olutayo and Rigolo, Laura and Mehrtash, Alireza and Norton, Isaiah and Pasternak, Ofer and Rathi, Yogesh and Golby, Alexandra J. and O'Donnell, Lauren J.},
  date = {2015-01-01},
