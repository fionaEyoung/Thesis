  keywords = {artefact,Brainstem,Connectome,correction,Distortion correction,DWI,FOD,mdnote,MRes,registration,Susceptibility}
}

@article{Qiu2017,
  title = {Real-{{Time Motor Cortex Mapping}} for the {{Safe Resection}} of {{Glioma}}: {{An Intraoperative Resting-State fMRI Study}}.},
  author = {Qiu, T-M and Gong, F-Y and Gong, X and Wu, J-S and Lin, C-P and Biswal, B B and Zhuang, D-X and Yao, C-J and Zhang, X-L and Lu, J-F and Zhu, F-P and Mao, Y and Zhou, L-F},
  date = {2017-02-02},
  journaltitle = {American Journal of Neuroradiology},
