  title = {Preventing visual field deficits from neurosurgery},
  author = {Winston, Gavin P. and Daga, Pankaj and White, Mark J. and Micallef, Caroline and Miserocchi, Anna and Mancini, Laura and Modat, Marc and Stretton, Jason and Sidhu, Meneka K. and Symms, Mark R. and Lythgoe, David J. and Thornton, John and Yousry, Tarek A. and Ourselin, Sebastien and Duncan, John S. and McEvoy, Andrew W.},
