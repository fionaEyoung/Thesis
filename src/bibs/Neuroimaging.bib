@article{Ciccarelli2003,
  title = {From diffusion tractography to quantitative white matter tract measures: a reproducibility study},
  author = {Ciccarelli, O. and Parker, G.J.M. and Toosy, A.T. and Wheeler-Kingshott, C.A.M. and Barker, G.J. and Boulby, P.A. and Miller, D.H. and Thompson, A.J.},
