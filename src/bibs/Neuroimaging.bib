@article{Amirhossein2017b,
  title = {In {{Reply}}: {{Evaluation}} of {{Diffusion Tensor Imaging-Based Tractography}} of the {{Corticospinal Tract}}: {{A Correlative Study With Intraoperative Magnetic Resonance Imaging}} and {{Direct Electrical Subcortical Stimulation}}},
