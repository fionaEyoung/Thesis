  author = {Ivanova, Maria V. and Isaev, Dmitry Yu. and Dragoy, Olga V. and Akinina, Yulia S. and Petrushevskiy, Alexey G. and Fedina, Oksana N. and Shklovsky, Victor M. and Dronkers, Nina F.},
  date = {2016-12-01},
  journaltitle = {Cortex},
