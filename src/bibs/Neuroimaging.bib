@article{Legarreta2021,
  title = {Filtering in tractography using autoencoders ({{FINTA}})},
  author = {Legarreta, Jon Haitz and Petit, Laurent and Rheault, François and Theaud, Guillaume and Lemaire, Carl and Descoteaux, Maxime and Jodoin, Pierre Marc},
  date = {2021-08-01},
  journaltitle = {Medical Image Analysis},
