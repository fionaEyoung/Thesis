@article{Rheault2019,
  title = {Bundle-specific tractography with incorporated anatomical and orientational priors},
  author = {Rheault, Francois and St-Onge, Etienne and Sidhu, Jasmeen and Maier-Hein, Klaus and Tzourio-Mazoyer, Nathalie and Petit, Laurent and Descoteaux, Maxime},
