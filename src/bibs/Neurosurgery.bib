  author = {Low, Sharon Y.Y. and Lim, Evangeline H.L. and Loh, Lik Eng and Mok, Yee Hui and Siow, Yew Nam and Ng, Lee Ping and Seow, Wan Tew and Kirollos, Ramez W. and Low, David C.Y.},
  date = {2020-03-01},
  journaltitle = {World Neurosurgery},
