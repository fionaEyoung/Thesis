@article{Baskin2013,
  title = {Management of children with brain tumors in {{Paraguay}}},
  author = {Baskin, Jacquelyn L. and Lezcano, Eva and Kim, Bo Sung and Figueredo, Diego and Lassaletta, Alvaro and Perez-Martinez, Antonio and Madero, Luis and Caniza, Miguela A. and Howard, Scott C. and Samudio, Angelica and Finlay, Jonathan L.},
