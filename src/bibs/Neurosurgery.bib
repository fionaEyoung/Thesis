@article{DAndrea2012,
  title = {Intraoperative {{DTI}} and brain mapping for surgery of neoplasm of the motor cortex and the corticospinal tract: our protocol and series in {{BrainSUITE}}},
  author = {D’Andrea, Giancarlo and Angelini, Albina and Romano, Andrea and Di Lauro, Antonio and Sessa, Giovanni and Bozzao, Alessandro and Ferrante, Luigi},
