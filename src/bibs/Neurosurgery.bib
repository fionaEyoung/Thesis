@article{Gonzalez-Darder2022a,
  title = {The temporary resection of the cranial vault by {{Wilhelm Wagner}} (1848–1900) instead of trepanation: the cornerstone of the modern craniotomy},
  shorttitle = {The temporary resection of the cranial vault by {{Wilhelm Wagner}} (1848–1900) instead of trepanation},
  author = {González-Darder, José M. and Capilla-Guasch, Pau},
