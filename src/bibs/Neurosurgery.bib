  author = {Kubben, Pieter L. and family=Meulen, given=Karlien J., prefix=ter, useprefix=true and Schijns, Olaf E.M.G. and family=Laak-Poort, given=Mariël P., prefix=ter, useprefix=true and family=Overbeeke, given=Jacobus J., prefix=van, useprefix=true and family=Santbrink, given=Henk, prefix=van, useprefix=false},
