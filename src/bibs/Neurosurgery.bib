@article{Nimsky2005,
  title = {Preoperative and intraoperative diffusion tensor imaging-based fiber tracking in glioma surgery},
  author = {Nimsky, Christopher and Ganslandt, Oliver and Hastreiter, Peter and Wang, Ryopeng and Benner, Thomas and Sorensen, A. Gregory and Fahlbusch, Rudolf},
  date = {2005-12-07},
  journaltitle = {Neurosurgery},
