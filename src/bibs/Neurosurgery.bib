}

@article{Motomura2014,
  title = {Association of dorsal inferior frontooccipital fasciculus fibers in the deep parietal lobe with both reading and writing processes: a brain mapping study: {{Case}} report},
  shorttitle = {Association of dorsal inferior frontooccipital fasciculus fibers in the deep parietal lobe with both reading and writing processes},
