@article{McCrea2015,
  title = {Sex, age, anatomic location, and extent of resection influence outcomes in children with high-grade glioma},
  author = {McCrea, Heather J. and Bander, Evan D. and Venn, Rachael A. and Reiner, Anne S. and Iorgulescu, J. Bryan and Puchi, Luis A. and Schaefer, Peter M. and Cederquist, Gustav and Greenfield, Jeffrey P.},
  date = {2015},
