@article{Nimsky2005a,
  title = {Intraoperative {{Diffusion-Tensor MR Imaging}}: {{Shifting}} of {{White Matter Tracts}} during {{Neurosurgical Procedures}}—{{Initial Experience}}},
  author = {Nimsky, Christopher and Ganslandt, Oliver and Hastreiter, Peter and Wang, Ruopeng and Benner, Thomas and Sorensen, A. Gregory and Fahlbusch, Rudolf},
