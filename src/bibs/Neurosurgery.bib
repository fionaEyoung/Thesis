@article{Nimsky2004,
  title = {Intraoperative {{High-Field-Strength MR Imaging}}: {{Implementation}} and {{Experience}} in 200 {{Patients}}},
  author = {Nimsky, Christopher and Ganslandt, Oliver and family=Keller, given=Boris, prefix=von, useprefix=true and Romstöck, Johann and Fahlbusch, Rudolf},
  date = {2004-10-02},
  journaltitle = {Radiology},
  volume = {233},
  number = {1},
  eprint = {15317949},
  eprinttype = {pmid},
